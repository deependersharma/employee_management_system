<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:fillViewport="true"
    tools:context=".Views.Update_employee">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bottom_border"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/page_title_update_employee"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <ImageButton
                android:id="@+id/image_picker"
                android:layout_width="70dp"
                android:layout_height="67dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_add_image" />

            <TextView
                android:id="@+id/text_joining_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/image_picker"
                android:fontFamily="@font/montserrat_medium"
                android:text="Joining Date"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@id/update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_joining_date"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image_picker"
                android:background="@drawable/shape1"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="Choose Date"
                android:textSize="20sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/text_emp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Employee ID"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/update_employee_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emp_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:inputType="number"
                android:hint="6 Digits &quot;123456&quot;"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_employee_id"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Name of Employee"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/update_employee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emp_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_emp_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_employee_name"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Employee Role"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/update_employee_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emp_role"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_emp_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_employee_role"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Employee Salary (Hourly)"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/update_employee_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_emp_salary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:inputType="numberDecimal"
                android:textSize="24sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_update_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:drawableLeft="@drawable/icon_check"
            android:backgroundTint="@color/blue_primary"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="@string/button_update_employee"
            app:iconPadding="-20dp"
            android:textSize="24sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>